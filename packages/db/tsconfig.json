{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}